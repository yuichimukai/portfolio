{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": "every hour",
  "timezone": "Asia/Tokyo",
  "enabledManagers": [
    "github-actions",
    "npm"
  ],
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "excludePackageNames": ["typescript"]
    }
  ]
}
